<%= example_heading('Header') %>

<%= render "shared/example", title: 'Header', example: <<~HEADER
  render HyperuiComponent::HeaderComponent.new(
    logotype: 'GOV.UK',
    service_name: 'Amazing service',
    service_url: '/amazing-service/home')
  HEADER
%>

<%= render "shared/example", title: 'Header without service name', example: %{render HyperuiComponent::HeaderComponent.new(logotype: 'Custom')} %>

<%= render "shared/example", title: 'Header with a product name and custom description', example: <<~HEADER
  render HyperuiComponent::HeaderComponent.new(logotype: 'GOV.UK') do |component|
    component.product_name { "Name" }
  end
HEADER
%>

<%= render "shared/example", title: 'Header with navigation', example: <<~HEADER
  render HyperuiComponent::HeaderComponent.new(logotype: 'A new service', service_name: "It's very good") do |component|
    component.navigation_item(text: 'Page A', href: '/#page-a')
    component.navigation_item(text: 'Page B', href: '/#page-b')
    component.navigation_item(text: 'Page C', href: '/#page-c', active: true)
  end
HEADER
%>
