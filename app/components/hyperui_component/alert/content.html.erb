<div role="alert" class="rounded border-l-4 border-red-500 bg-red-50 p-4">
  <% if icon? %>
  <div class="flex items-center gap-2 text-red-700">
    <%= render HyperUIComponent::Icon.new(icon) %>

    <strong class="block font-medium"><%= title %></strong>
  </div>
  <% else %>
  <strong class="block font-medium text-red-700"><%= title %></strong>
  <% end %>
  <p class="mt-2 text-sm text-red-700">
    <%= content %>
  </p>
</div>
